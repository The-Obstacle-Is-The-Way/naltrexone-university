# Naltrexone University - Environment Variables
# Copy this to .env and fill in your values
# See /docs/specs/master_spec.md Section 10 for full documentation

# =============================================================================
# DATABASE (Neon Postgres)
# =============================================================================
DATABASE_URL=postgresql://***

# =============================================================================
# CLERK (Authentication) - Get from https://dashboard.clerk.com
# =============================================================================
CLERK_SECRET_KEY=sk_test_***
# Webhook signing secret (Dashboard → Webhooks → Endpoint → Signing secret)
CLERK_WEBHOOK_SIGNING_SECRET=whsec_***
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_***
# Set to 'true' to skip ClerkProvider during build (CI without real keys).
# Forbidden in production runtime (e.g., VERCEL_ENV=production, or NODE_ENV=production when running `pnpm start`).
# NEXT_PUBLIC_SKIP_CLERK=true

# =============================================================================
# STRIPE (Payments) - Get from https://dashboard.stripe.com/test/apikeys
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_***
STRIPE_SECRET_KEY=sk_test_***
STRIPE_WEBHOOK_SECRET=whsec_***

# Stripe Price IDs - Create products at https://dashboard.stripe.com/test/products
# Pro Annual: $199/year
NEXT_PUBLIC_STRIPE_PRICE_ID_ANNUAL=price_***
# Pro Monthly: $29/month
NEXT_PUBLIC_STRIPE_PRICE_ID_MONTHLY=price_***

# =============================================================================
# SENTRY (Error Tracking) - Get DSN from https://sentry.io → Project → Client Keys
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=

# =============================================================================
# APP CONFIG
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
